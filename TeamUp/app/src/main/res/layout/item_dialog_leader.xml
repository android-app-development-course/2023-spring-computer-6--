<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="@color/blue_light"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- 左侧 团队成员的姓名、学校、专业 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_weight="1">
            <!--  成员名称 -->
            <TextView
                android:id="@+id/MemberName_Leader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team Member"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- 成员学校 -->
            <TextView
                android:id="@+id/MemberUniversity_Leader"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Member University"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="15sp"
                android:layout_gravity="end|bottom" />
            <!-- 成员专业 -->
            <TextView
                android:id="@+id/MemberMajor_Leader"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Member Major"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="15sp"
                android:layout_gravity="end|bottom"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">
            <Button
                android:id="@+id/btnKickOut"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text = "请出"
                android:textColor = "@color/white"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>