<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/join_team_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"


        android:paddingTop="10dp"
        android:paddingBottom="13dp"
        android:paddingStart="10dp"

        android:shadowColor="#DBF0FA"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="22"
        />
    <TextView
        android:id="@+id/join_team_jianjie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="『团队简介』"
        android:textColor="#4284f0"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"

        android:paddingBottom="5dp"
        />
    <TextView
        android:id="@+id/join_team_info"
        android:layout_width="255dp"
        android:layout_height="400dp"
        android:padding = "25dp"
        android:textSize="18sp"


        android:layout_gravity="center"
        android:scrollbars="vertical"
        android:textColor="@color/white"
        android:textColorHint="@color/hint"
        android:background="@drawable/rounded_rectangle_edit2"/>
    <Button
        android:id="@+id/btnJoinTeam"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/btnJoinTeam"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

</LinearLayout>
