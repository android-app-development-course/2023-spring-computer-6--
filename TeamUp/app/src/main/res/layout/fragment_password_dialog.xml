<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.InfoDialogFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="290dp"
        android:layout_height="260dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/login_button_bg"
        android:paddingTop="5dp"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/password"
            android:scaleY="1.4"
            android:scaleX="1.3"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"

            />




        <TextView
            android:id="@+id/info_dialog_pwd_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原密码:"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"

            />
        <EditText
            android:id="@+id/info_dialog_pwd_pre_e"
            android:layout_width="165dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:theme="@style/MyEditText"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:inputType="textPassword"
            />


        <TextView
            android:id="@+id/info_dialog_pwd_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码:"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/info_dialog_pwd_pre"
            app:layout_constraintTop_toBottomOf="@id/info_dialog_pwd_pre"
            android:layout_marginTop="26dp"

            />
        <EditText
            android:id="@+id/info_dialog_pwd_now_e"
            android:layout_width="165dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/info_dialog_pwd_pre_e"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:theme="@style/MyEditText"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:inputType="textPassword"
            />


        <TextView
            android:id="@+id/info_dialog_pwd_conf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码:"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/info_dialog_pwd_now"
            app:layout_constraintTop_toBottomOf="@id/info_dialog_pwd_now"
            android:layout_marginTop="26dp"

            />
        <EditText
            android:id="@+id/info_dialog_pwd_conf_e"
            android:layout_width="165dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/info_dialog_pwd_now_e"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:theme="@style/MyEditText"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:inputType="textPassword"
            />




        <android.widget.Button
            android:id="@+id/info_dialog_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:textColor="@color/blue"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="10dp"

            android:background="@drawable/info_dialog_bt"

            />
        <android.widget.Button
            android:id="@+id/info_dialog_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:textColor="@color/blue"
            android:textSize="20sp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/info_dialog_bt"

            />



    </androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>