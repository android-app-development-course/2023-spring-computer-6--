<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewPagerUI.me.MeFragment"
    android:background="#D6D6D6"
    >


    <View
        android:id="@+id/bg_me"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/meinfo_bgbox2"

        />

    <com.example.teamup.WaveView3
        android:id="@+id/userinfo_wave2"
        android:layout_width="match_parent"
        android:layout_height="710dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:alpha=".5"/>

    <com.example.teamup.WaveView
        android:id="@+id/userinfo_wave"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:alpha="1"/>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/userinfo_layout_box"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        app:layout_constraintTop_toBottomOf="@id/bg_me"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="-250dp"
        >

        <View
            android:id="@+id/userinfo_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="20dp"

            android:background="@drawable/meinfo_bgbox"

            />

        <com.example.teamup.RoundImageView
            android:id="@+id/round_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/classic_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            tools:ignore="MissingClass,MissingConstraints" />

        <TextView
            android:id="@+id/userinfo_username"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="@id/round_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/userinfo_box"
            android:layout_marginStart="125dp"
            android:layout_marginTop="100dp"
            android:text="立即登录"
            android:textSize="32sp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"

            android:ellipsize="end"
            android:singleLine="true"
            />



        <TextView
            android:id="@+id/userinfo_account_t"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/round_image"
            app:layout_constraintStart_toStartOf="@id/userinfo_box"
            android:text="账号"
            android:textSize="28sp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="33dp"

            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toStartOf="@id/userinfo_account_t"
            app:layout_constraintTop_toBottomOf="@id/round_image"
            android:layout_marginTop="24dp"
            android:layout_marginRight="-10dp"
            android:src="@drawable/arrow_right"
            />


        <TextView
            android:id="@+id/userinfo_account_c"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/userinfo_account_t"
            app:layout_constraintTop_toBottomOf="@id/round_image"
            android:text=""
            android:textSize="28sp"

            android:layout_marginTop="33dp"
            android:ellipsize="end"
            android:singleLine="true"

            />

        <View
            android:id="@+id/userinfo_boundary1"
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:background="#939292"
            app:layout_constraintStart_toEndOf="@id/userinfo_account_t"
            app:layout_constraintTop_toBottomOf="@id/userinfo_account_c"
            android:layout_marginTop="1dp"


            />






        <TextView
            android:id="@+id/userinfo_school_t"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/userinfo_account_t"
            app:layout_constraintStart_toStartOf="@id/userinfo_box"
            android:text="学校"
            android:textSize="28sp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"

            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toStartOf="@id/userinfo_school_t"
            app:layout_constraintTop_toBottomOf="@id/userinfo_account_t"
            android:layout_marginTop="21dp"
            android:layout_marginRight="-10dp"
            android:src="@drawable/arrow_right"
            />


        <TextView
            android:id="@+id/userinfo_school_c"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/userinfo_school_t"
            app:layout_constraintTop_toBottomOf="@id/userinfo_account_t"
            android:text=""
            android:textSize="28sp"
            android:layout_marginTop="30dp"
            android:ellipsize="end"
            android:singleLine="true"

            />

        <View
            android:id="@+id/userinfo_boundary2"
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:background="#939292"
            app:layout_constraintStart_toEndOf="@id/userinfo_school_t"
            app:layout_constraintTop_toBottomOf="@id/userinfo_school_c"
            android:layout_marginTop="1dp"

            />






        <TextView
            android:id="@+id/userinfo_major_t"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/userinfo_school_t"
            app:layout_constraintStart_toStartOf="@id/userinfo_box"
            android:text="专业"
            android:textSize="28sp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"

            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toStartOf="@id/userinfo_major_t"
            app:layout_constraintTop_toBottomOf="@id/userinfo_school_t"
            android:layout_marginTop="21dp"
            android:layout_marginRight="-10dp"
            android:src="@drawable/arrow_right"
            />


        <TextView
            android:id="@+id/userinfo_major_c"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/userinfo_major_t"
            app:layout_constraintTop_toBottomOf="@id/userinfo_school_t"
            android:text=""
            android:textSize="28sp"
            android:layout_marginTop="30dp"

            android:ellipsize="end"
            android:singleLine="true"
            />

        <View
            android:id="@+id/userinfo_boundary3"
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:background="#939292"
            app:layout_constraintStart_toEndOf="@id/userinfo_major_t"
            app:layout_constraintTop_toBottomOf="@id/userinfo_major_c"
            android:layout_marginTop="1dp"
            />









        <TextView
            android:id="@+id/userinfo_gender_t"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/userinfo_major_t"
            app:layout_constraintStart_toStartOf="@id/userinfo_box"
            android:text="性别"
            android:textSize="28sp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"

            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toStartOf="@id/userinfo_gender_t"
            app:layout_constraintTop_toBottomOf="@id/userinfo_major_t"
            android:layout_marginTop="21dp"
            android:layout_marginRight="-10dp"
            android:src="@drawable/arrow_right"
            />


        <TextView
            android:id="@+id/userinfo_gender_c"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/userinfo_gender_t"
            app:layout_constraintTop_toBottomOf="@id/userinfo_major_t"
            android:text=""
            android:textSize="28sp"
            android:layout_marginTop="30dp"

            android:ellipsize="end"
            android:singleLine="true"
            />

        <View
            android:id="@+id/userinfo_boundary4"
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:background="#939292"
            app:layout_constraintStart_toEndOf="@id/userinfo_gender_t"
            app:layout_constraintTop_toBottomOf="@id/userinfo_gender_c"
            android:layout_marginTop="1dp"
            />




        <TextView
            android:id="@+id/userinfo_resume_t"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/userinfo_gender_t"
            app:layout_constraintStart_toStartOf="@id/userinfo_box"
            android:text="简介"
            android:textSize="28sp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toStartOf="@id/userinfo_resume_t"
            app:layout_constraintTop_toBottomOf="@id/userinfo_gender_t"
            android:layout_marginTop="21dp"
            android:layout_marginRight="-10dp"
            android:src="@drawable/arrow_right"
            />


        <TextView
            android:id="@+id/userinfo_resume_c"
            android:layout_width="210dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toEndOf="@id/userinfo_resume_t"
            app:layout_constraintTop_toBottomOf="@id/userinfo_gender_t"
            android:scrollbars="vertical"

            android:text=""
            android:textSize="26sp"
            android:background="@drawable/resume_box"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:paddingTop="3dp"
            android:paddingBottom="1dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/userinfo_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/userinfo_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:focusable="true"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/userinfo_menu_box"
        android:layout_width="180dp"
        android:layout_height="195dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-25dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/userinfo_menu_box"
        android:clickable="false"
        android:visibility="invisible"
        >

        <TextView
            android:id="@+id/userinfo_menu_info_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="修改信息"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/userinfo_menu_code_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="更换密码"
            app:layout_constraintTop_toBottomOf="@id/userinfo_menu_info_c"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"

            />

        <TextView
            android:id="@+id/userinfo_menu_logout_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="退出登录"
            app:layout_constraintTop_toBottomOf="@id/userinfo_menu_code_c"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>