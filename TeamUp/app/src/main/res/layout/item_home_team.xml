<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="25dp"
    app:cardBackgroundColor="@color/blue"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- 左侧 队长的姓名、学校、专业 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3"
            android:paddingTop="10dp"
            android:paddingStart="13dp"
            >
            <!-- 队长名称 -->
            <TextView
                android:id="@+id/LeaderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="5dp"
                android:letterSpacing="0.2"
                android:textColor="#020202"

                android:shadowColor="#DBF0FA"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="25"
                />

            <!-- 队长学校 -->
            <TextView
                android:id="@+id/LeaderUniversity"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text=""
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="15sp"
                android:paddingStart="7dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:layout_gravity="end|bottom"
                android:background="@drawable/label_bg"
                />
            <!-- 队长专业 -->
            <TextView
                android:id="@+id/LeaderMajor"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text=""
                android:paddingStart="7dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="15sp"
                android:layout_gravity="end|bottom"
                android:background="@drawable/label_bg"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- 标题 -->
            <TextView
                android:id="@+id/CompetitionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""

                android:textSize="26.5sp"
                android:textStyle="bold"
                android:textColor="@color/white"

                android:ellipsize="end"
                android:singleLine="true"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:layout_marginBottom="5dp"
                android:letterSpacing="0.18"

                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="2"
                />

            <!-- 参加人数 -->
            <TextView
                android:id="@+id/team_attendees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginBottom="7dp"
                android:textSize="10sp"
                android:layout_gravity="end|bottom"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"

                android:textColor="#EAFDFC"
                android:background="@drawable/label_bg2"
                android:letterSpacing="0.52"
                />

            <!-- 截止时间 -->


            <TextView
                android:id="@+id/team_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#CDFDFB"
                android:background="@drawable/label_bg2"
                android:textSize="14.5sp"
                android:layout_gravity="end|bottom"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="1dp"

                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:letterSpacing="0.11"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>