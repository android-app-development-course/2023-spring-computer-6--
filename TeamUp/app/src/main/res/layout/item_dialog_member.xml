<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="25dp"
    app:cardBackgroundColor="@color/blue_light"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- 左侧 队长的姓名、学校、专业 -->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">
            <!-- 队长名称 -->
            <TextView
                android:id="@+id/LeaderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team Member"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- 队长学校 -->
            <TextView
                android:id="@+id/LeaderUniversity"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="LeaderUniversity"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="15sp"
                android:layout_gravity="end|bottom" />
            <!-- 队长专业 -->
            <TextView
                android:id="@+id/LeaderMajor"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="LeaderMajor"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="15sp"
                android:layout_gravity="end|bottom"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- 标题 -->
            <TextView
                android:id="@+id/CompetitionName"
                android:layout_width="match_parent"
                android:layout_height="18sp"
                android:text="CompetitionName"
                android:textSize="20sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:layout_weight="1"/>

            <!-- 参加人数 -->
            <TextView
                android:id="@+id/team_attendees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/20"
                android:textSize="18sp"
                android:layout_gravity="end|bottom" />
            <!-- 截止时间 -->
            <TextView
                android:id="@+id/team_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-10-10 10:10"
                android:textSize="14sp"
                android:layout_gravity="end|bottom" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>