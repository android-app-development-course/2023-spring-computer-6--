<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InfoDialogFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="290dp"
        android:layout_height="410dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/login_button_bg"
        android:paddingTop="5dp"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/edit"
            android:scaleY="1.5"
            android:scaleX="1.5"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/edit"
            android:scaleY="1.2"
            android:scaleX="1.2"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="-2dp"

            />


        <TextView
            android:id="@+id/info_dialog_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名："
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"

            />
        <EditText
            android:id="@+id/info_dialog_username_e"
            android:layout_width="170dp"
            android:layout_height="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="25dp"
            android:theme="@style/MyEditText"
            android:textColor="@color/white"
            android:textSize="18sp"
            />


        <TextView
            android:id="@+id/info_dialog_university"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学    校："
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/info_dialog_username"
            app:layout_constraintTop_toBottomOf="@id/info_dialog_username"
            android:layout_marginTop="26dp"

            />
        <EditText
            android:id="@+id/info_dialog_university_e"
            android:layout_width="170dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@id/info_dialog_username_e"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="25dp"
            android:theme="@style/MyEditText"
            android:textColor="@color/white"
            android:textSize="18sp"
            />



        <TextView
            android:id="@+id/info_dialog_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专    业："
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/info_dialog_university"
            app:layout_constraintTop_toBottomOf="@id/info_dialog_university"
            android:layout_marginTop="26dp"

            />

        <EditText
            android:id="@+id/info_dialog_major_e"
            android:layout_width="170dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@id/info_dialog_university_e"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="25dp"
            android:theme="@style/MyEditText"
            android:textColor="@color/white"
            android:textSize="18sp"
            />



        <TextView
            android:id="@+id/info_dialog_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性    别："
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/info_dialog_major"
            app:layout_constraintTop_toBottomOf="@id/info_dialog_major"
            android:layout_marginTop="26dp"
            />


        <EditText
            android:id="@+id/info_dialog_gender_e"
            android:layout_width="170dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@id/info_dialog_major_e"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="25dp"
            android:theme="@style/MyEditText"
            android:textColor="@color/white"
            android:textSize="18sp"
            />


        <TextView
            android:id="@+id/info_dialog_resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简    介："
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/info_dialog_gender"
            app:layout_constraintTop_toBottomOf="@id/info_dialog_gender"
            android:layout_marginTop="26dp"
            />


        <EditText
            android:id="@+id/info_dialog_resume_e"
            android:layout_width="170dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/info_dialog_gender_e"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:theme="@style/MyEditText"
            android:textColor="@color/black"
            android:textSize="18sp"


            android:background="@drawable/info_dialog_resume_bg"
            android:padding="10sp"
            />

        <android.widget.Button
            android:id="@+id/info_dialog_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:textColor="@color/blue"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="10dp"

            android:background="@drawable/info_dialog_bt"

            />
        <android.widget.Button
            android:id="@+id/info_dialog_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:textColor="@color/blue"
            android:textSize="20sp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/info_dialog_bt"

            />



    </androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>